# =============================================================================
# AI EBOOK CREATOR - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="AI eBook Creator"
NEXT_PUBLIC_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Database Configuration (PocketBase)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POCKETBASE_URL=http://localhost:8090
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# AI Provider Configuration
# -----------------------------------------------------------------------------
# Primary AI Provider (Anthropic Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Secondary AI Provider (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=your_openai_org_id_here

# Fallback AI Provider (Google)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-pro

# AI Configuration
MAX_TOKENS=4000
TEMPERATURE=0.7
AI_TIMEOUT=30000
AI_RETRY_ATTEMPTS=3
AI_RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Grammar & Language Services
# -----------------------------------------------------------------------------
LANGUAGETOOL_API_URL=https://api.languagetool.org/v2
LANGUAGETOOL_API_KEY=your_languagetool_api_key_here
LANGUAGETOOL_TIMEOUT=10000

# Supported Languages
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,de
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# Session Configuration
SESSION_TIMEOUT=7200000
# JWT Token Expiry (7 days)
JWT_EXPIRES_IN=7d

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Caching & Performance
# -----------------------------------------------------------------------------
# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# -----------------------------------------------------------------------------
# File Storage & Export
# -----------------------------------------------------------------------------
# File Upload Limits
MAX_FILE_SIZE=10485760
# 10MB in bytes
MAX_FILES_PER_PROJECT=50

# Export Configuration
EXPORT_FORMATS=pdf,epub,html,docx
EXPORT_TIMEOUT=60000
MAX_EXPORT_SIZE=52428800
# 50MB in bytes

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Enable/Disable specific log types
LOG_API_REQUESTS=true
LOG_AI_INTERACTIONS=true
LOG_DATABASE_QUERIES=false
LOG_PERFORMANCE_METRICS=true

# Error Reporting (Sentry - Optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# Mock AI Responses in Development
MOCK_AI_RESPONSES=false
MOCK_GENERATION_DELAY=2000

# Testing Configuration
TEST_DATABASE_URL=http://localhost:8091
TEST_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Production Optimizations
# -----------------------------------------------------------------------------
# Memory Management
NODE_OPTIONS="--max-old-space-size=2048"
GARBAGE_COLLECTION_INTERVAL=300000

# Performance Monitoring
MONITOR_MEMORY_USAGE=true
MEMORY_THRESHOLD_WARNING=80
MEMORY_THRESHOLD_CRITICAL=95

# Rate Limiting
RATE_LIMIT_WINDOW=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=false
ENABLE_BETA_FEATURES=false
ENABLE_AI_CACHING=true
ENABLE_GRAMMAR_CHECK=true
ENABLE_AUTO_SAVE=true

# -----------------------------------------------------------------------------
# Internationalization
# -----------------------------------------------------------------------------
NEXT_PUBLIC_I18N_DEBUG=false
I18N_FALLBACK_LANGUAGE=en
I18N_LOAD_PATH=./public/locales/{{lng}}/{{ns}}.json

# -----------------------------------------------------------------------------
# Analytics & Metrics (Optional)
# -----------------------------------------------------------------------------
GOOGLE_ANALYTICS_ID=your_ga_id_here
POSTHOG_KEY=your_posthog_key_here
AMPLITUDE_API_KEY=your_amplitude_key_here

# -----------------------------------------------------------------------------
# Backup & Recovery
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
# 24 hours
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# END OF CONFIGURATION
# =============================================================================